@using CvYarat.Models
@using CvYarat.Data.Enums
@model ClientSkill

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <h3>Dil bilikləriniz</h3><br /><br /><br />
    <h5><a href="/Skill/ListOfSkill">Biliklər</a></h5>

    <div>
        <form class="form-group" asp-action="EditSkill" asp-controller="Skill" method="post" enctype="multipart/form-data">

            @Html.HiddenFor(x => x.Id)
            <label>Dil biliyi</label><br /><br />
            @Html.TextBoxFor(x => x.Name, new { Value = Model.Name, @class = "form-control" })<br />
            @Html.ValidationMessageFor(x => x.Name, "", new { @class = "text-danger" })<br />


            <label>Dil bilik səviyyəsi</label><br /><br />
            @Html.DropDownListFor(x => x.Level, new SelectList(Enum.GetValues(typeof(LevelCheck))), new { @class = "form-control" })<br />
            @Html.ValidationMessageFor(x => x.Level, "", new { @class = "text-danger" })<br />

            <input type="submit" class="btn btn-success" value="Yadda saxla">
        </form>
    </div>
</body>
</html>
